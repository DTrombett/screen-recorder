{
  "name": "screen-recorder",
  "version": "1.0.0",
  "homepage": "https://github.com/DTrombett/screen-recorder#readme",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "description": "A simple screen recorder",
  "scripts": {
    "build": "tsup && nexe dist/index.js -t 14.15.1",
    "lint": "eslint src --fix",
    "prepare": "npm test",
    "prettier": "prettier --write src/**/*.ts",
    "start": "npm run build && node --trace-warnings --enable-source-maps --experimental-specifier-resolution=node .",
    "test": "eslint src && tsc --noEmit"
  },
  "author": "DTrombett",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DTrombett/screen-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/DTrombett/screen-recorder/issues"
  },
  "dependencies": {
    "ffmpeg-static": "^5.0.2"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/ffmpeg-static": "^3.0.1",
    "@types/node": "^14.18.21",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-plugin-node": "^11.1.0",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4"
  }
}
